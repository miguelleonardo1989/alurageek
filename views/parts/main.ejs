<!-- Banner -->
<section class="banner">
  <div class="banner__image"></div>
  <div class="banner__text">
    <h2>PÃ¡scoa Promocional</h2>
    <h3>Produtos selecionados com 33% de desconto</h3>
    <div class="banner__button">
      <a href="#consoles" class="button__blue button">Ver Consoles</a>
    </div>
  </div>
</section>

<!-- Destaque -->
<section class="products container highlight">
  <div class="products__text">
    <h2>Star Wars</h2>
    <a href="<%= `/ver&category=${starWars[0].category}` %>"
      >Ver tudo <i class="icon-arrow-right"></i
    ></a>
  </div>
  <div class="products__card grid">
    <% starWars.forEach(product => { %>
    <div>
      <img src="<%= product.image %>" alt="<%= product.altText %>" />
      <h3><%= product.name %></h3>
      <p><%= product.price %></p>
      <a
        class="products__card--view"
        href="#"
        method="POST"
        data-id="<%= product.id %>"
      >
        Ver produto
      </a>
    </div>
    <% }) %>
  </div>
</section>

